<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/recycler_film_card_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/recycler_film_card_tittle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"

            app:layout_constraintVertical_chainStyle="spread_inside"/>

        <TextView
            android:id="@+id/recycler_film_card_tittle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Title"
            app:layout_constraintLeft_toRightOf="@+id/recycler_film_card_poster"
            app:layout_constraintTop_toTopOf="@+id/recycler_film_card_poster"
            android:layout_marginTop="0dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginStart="8dp"
            app:layout_constraintRight_toLeftOf="@+id/imageView2"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/date_card_film"
            android:textStyle="italic"
            android:textSize="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/recycler_film_card_poster"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_film_card_tittle"/>

        <ImageView
            android:background="@drawable/ic_star"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintRight_toLeftOf="@+id/rating"
            app:layout_constraintTop_toTopOf="@+id/rating"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/rating"
            android:layout_marginBottom="0dp"
            android:id="@+id/imageView2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/recycler_film_card_tittle"
            android:layout_marginTop="0dp"/>

        <TextView
            android:id="@+id/recycler_film_card_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"

            android:text="Description"
            app:layout_constraintBottom_toBottomOf="@+id/recycler_film_card_poster"
            app:layout_constraintLeft_toRightOf="@+id/recycler_film_card_poster"
            android:layout_marginStart="8dp"
            app:layout_constraintRight_toLeftOf="@+id/imageView2"
            android:layout_marginRight="0dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
